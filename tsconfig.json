{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "types": ["jest"],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
  }